<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F50057</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="btn_follow">
        <item name="android:background">@drawable/btn_follow</item>
        <item name="fontFamily">@font/montserat_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="btn_alpa">
        <item name="android:background">@drawable/btn_changephoto</item>
        <item name="alpha">0.80</item>
        <item name="fontFamily">@font/montserat_regular</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="btn_submit">
        <item name="android:background">@drawable/btn_submit</item>
        <item name="fontFamily">@font/montserat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_login">
        <item name="android:background">@drawable/btn_login</item>
        <item name="fontFamily">@font/montserat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="subheader">
        <item name="android:fontFamily">@font/montserat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/montserat_regular</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="body2" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/montserat_regular</item>
    </style>

    <style name="margin">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
