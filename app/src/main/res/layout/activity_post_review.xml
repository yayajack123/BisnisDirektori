<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".review.PostReviewActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/subheader"
        android:textAlignment="center"
        android:text="Add Review"/>

    <TextView
        android:id="@+id/title_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wiras Music Studios"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/subheader"
        android:text="Rate your experience"/>

    <RatingBar
        android:id="@+id/rating_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
         />

    <TextView
        android:id="@+id/txt_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate" />

    <View
        style="@style/view"/>

    <TextView
        android:id="@+id/title_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/subheader"
        android:text="Add photos"/>

    <Button
        android:id="@+id/add_photos"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_baseline_add_a_photo_24"
        android:text="Add"/>

    <ImageView
        android:id="@+id/photo_rvw"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/title_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/subheader"
        android:text="Write a review"/>

    <EditText
        android:id="@+id/add_review"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        style="@style/body"
        android:layout_height="wrap_content"
        android:hint="Write detailed review here"/>

    <Button
        android:id="@+id/submit_btn"
        style="@style/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Submit Review"
        android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>