<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment"
    android:background="@color/design_default_color_background">

    <TextView
        android:id="@+id/name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/montserat_regular"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Bussiness Directory"/>

    <TextView
        android:id="@+id/email_user"
        android:layout_below="@id/name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserat_regular"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:text="bd@mail.com"/>

    <TextView
        android:id="@+id/view_act"
        android:layout_below="@id/email_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#FF2C6B"
        android:drawableEnd="@drawable/ic_baseline_arrow_right_24"
        android:text="View activities"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo_user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:src="@drawable/kategori"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true"/>
    <View
        android:id="@+id/batas"
        android:layout_below="@id/photo_user"
        style="@style/view"
        />


    <LinearLayout
        android:id="@+id/layout_btn1"
        android:layout_below="@id/batas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/top_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_outline_account_circle_24"
            android:drawablePadding="15dp"
            android:text="Edit Profile"
            android:fontFamily="@font/montserat_regular"
            android:textColor="#000"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAlignment="viewStart"
            android:textAllCaps="false"/>
        <View
            style="@style/view"
            />
        <Button
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:text="Change Password"
            android:fontFamily="@font/montserat_regular"
            android:textColor="#000"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawableStart="@drawable/ic_outline_security_24"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAlignment="viewStart"
            android:textAllCaps="false"/>
        <View
            style="@style/view"
            />
<!--        <Button-->
<!--            android:id="@+id/language"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Language"-->
<!--            android:drawablePadding="15dp"-->
<!--            android:drawableStart="@drawable/ic_outline_language_24"-->
<!--            android:fontFamily="@font/montserat_regular"-->
<!--            android:textColor="#000"-->
<!--            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"-->
<!--            style="@style/Widget.AppCompat.Button.Borderless"-->
<!--            android:textAlignment="viewStart"-->
<!--            android:textAllCaps="false"/>-->
<!--        <View-->
<!--            style="@style/view"-->
<!--            />-->
        <Button
            android:id="@+id/about"
            android:fontFamily="@font/montserat_regular"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/ic_outline_apps_24"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAlignment="viewStart"
            android:textAllCaps="false"/>
        <View
            style="@style/view"
            />
        <Button
            android:id="@+id/login"
            android:fontFamily="@font/montserat_regular"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/ic_outline_exit_to_app_24"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAlignment="viewStart"
            android:textAllCaps="false"/>
        <View
            style="@style/view"
            />
        <Button
            android:id="@+id/register"
            android:fontFamily="@font/montserat_regular"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/ic_baseline_perm_contact_calendar_24"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAlignment="viewStart"
            android:textAllCaps="false"/>
        <View
            style="@style/view"
            />
        <Button
            android:id="@+id/log_out"
            android:fontFamily="@font/montserat_regular"
            android:textColor="#000"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/ic_outline_exit_to_app_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:text="Log out"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAlignment="viewStart"
            android:textAllCaps="false"/>

    </LinearLayout>
</RelativeLayout>