<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileUserActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/btn_login"
        android:textAllCaps="false"
        android:fontFamily="@font/montserat_regular"
        android:text="Save Changes"
        android:layout_alignParentBottom="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:layout_margin="10dp"
                style="@style/subheader"/>

            <TextView
                android:id="@+id/text_2"
                android:layout_below="@id/text_1"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cover Picture"/>

            <ImageView
                android:id="@+id/cover_pic"
                android:layout_below="@id/text_2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/studio_2"/>

            <LinearLayout
                android:layout_below="@id/cover_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Profile photo"
                    style="@style/body2"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/btn_follow"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="10dp"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_outline_add_a_photo_24"
                    android:text="Add Photo"/>

                <View
                    style="@style/view"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    style="@style/body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Name" />

                <EditText
                    android:id="@+id/txt_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/body"
                    android:inputType="text"
                    android:text="Juliarta"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Email"
                    style="@style/body2"/>

                <EditText
                    android:id="@+id/txt_email"
                    style="@style/body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:text="juliarta@gmail.com" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Phone Number"
                    style="@style/body2"/>

                <EditText
                    android:id="@+id/txt_phonenumber"
                    style="@style/body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:text="08999426953" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Location"
                    style="@style/body2"/>

                <EditText
                    android:id="@+id/txt_address"
                    style="@style/body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="Bali" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Description"
                    style="@style/body2"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/body"
                    android:inputType="text"
                    android:layout_marginBottom="50dp"
                    android:hint="Tell us a little something"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>