<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPasswordActivity">

    <Button
        android:id="@+id/btn_update_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Save Change"
        android:fontFamily="@font/montserrat_semibold"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/form"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    style="@style/body2"/>
                <EditText
                    android:id="@+id/password_user"
                    android:layout_width="match_parent"
                    android:hint="Password"
                    android:inputType="textPassword"
                    style="@style/body"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_outline_security_24"
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/password_user_confirm"
                    android:layout_width="match_parent"
                    android:hint="Password"
                    android:visibility="gone"
                    android:inputType="textPassword"
                    style="@style/body"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_outline_security_24"
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Password"
                    style="@style/body2"/>
                <EditText
                    android:id="@+id/new_password_user"
                    android:layout_width="match_parent"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    style="@style/body"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_outline_security_24"
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm New Password"
                    style="@style/body2"/>
                <EditText
                    android:id="@+id/confirm_new_password_user"
                    android:layout_width="match_parent"
                    android:hint="Confirm New Password"
                    android:inputType="textPassword"
                    style="@style/body"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_outline_security_24"
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>